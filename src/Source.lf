// Periodically produce an output consisting of a count followed by
// ": Hello World!".
actor Source(period:int(1000)) {
    language JavaScript;
    trigger t;
    output y:string;
    preamble {
        var n = 0;
    }
    initialize {
        schedule(t, period, PERIODIC);
        n = 0;
    }
    reaction(t) -> y {
        n = n + 1;
        set(y, n + ": Hello World!");
    }
}
